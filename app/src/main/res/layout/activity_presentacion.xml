<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.geseni_pc.tumejoreleccion.Presentacion"
    android:background="#f9fcff"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPCION"
            android:id="@+id/descripcion"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.07"
            android:gravity="center_vertical|center"
            android:textColor="#02020a"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:background="#6e9aff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este test vocacional te ayudara a poder elegir tu carrera"
            android:id="@+id/concepto"
            android:layout_weight="0.14"
            android:gravity="center_vertical"
            android:textStyle="italic"
            android:textColor="#ff7738"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRINCIPIO"
            android:id="@+id/principio"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColorLink="#ffa87c"
            android:textIsSelectable="false"
            android:textColor="#ff5d84"
            android:layout_weight="0.07"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:text="JesÃºs como Modelo"
            android:id="@+id/conceptoPrincipio"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.07"
            android:textSize="16dp"
            android:textStyle="italic"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREENCIA"
            android:id="@+id/creencia"
            android:textSize="20dp"
            android:layout_weight="0.05"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="#ff5d84"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="La Tierra Nueva"
            android:id="@+id/conceptoCreencia"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:layout_weight="0.08" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALOR"
            android:id="@+id/valor"
            android:textSize="20dp"
            android:layout_weight="0.07"
            android:textStyle="bold"
            android:typeface="monospace"
            android:visibility="visible"
            android:textColor="#ff5d84"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="El Servicio"
            android:id="@+id/conceptoValor"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textSize="16dp"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMPEZAR TEST"
            android:id="@+id/empezartest"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.07"
            android:textStyle="bold"
            android:typeface="normal"
            android:backgroundTint="#3f3dff" />

    </LinearLayout>
</RelativeLayout>
